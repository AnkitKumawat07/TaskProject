@ExtendWith(MockitoExtension.class)
public class TaskApiTests {
	
	
	@Mock  
	private taskService taskservice;

	@InjectMocks
	private TaskController taskController;
	
	
	private static final String END_POINT_URL = "/tasks";
	
	
	@Test
    public void testGetTaskById_Success() {
		Task newTask = new Task();
		newTask.setTaskName("Task Test1");
		newTask.setTaskDescription("Test Tasl Working");
		newTask.setDateSubmit(new Date());
		newTask.setPriority((short) 5);
		
		when(taskservice.createTask(newTask));
		
	}
	
	
	
	
